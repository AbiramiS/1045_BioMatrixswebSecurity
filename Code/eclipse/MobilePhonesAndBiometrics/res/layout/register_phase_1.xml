    <EditText android:layout_width="150dp" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/textView4" android:layout_alignBottom="@+id/textView4" android:layout_alignLeft="@+id/register_phase1_password" android:layout_alignParentRight="true" android:id="@+id/register_phase1_email" android:inputType="textEmailAddress"></EditText>
