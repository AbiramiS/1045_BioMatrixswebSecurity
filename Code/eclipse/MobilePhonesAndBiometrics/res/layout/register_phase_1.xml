<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="@drawable/samsung">
    <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:text="@string/registration_title"></TextView>
    <TextView android:layout_width="wrap_content" android:text="@string/password_label" android:id="@+id/textView3" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_below="@+id/register_phase1_username" android:layout_alignLeft="@+id/textView2" android:layout_marginTop="29dp"></TextView>
    <EditText android:id="@+id/register_phase1_username" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/textView2" android:layout_alignBottom="@+id/textView2" android:layout_width="150dp" android:layout_alignParentRight="true" android:layout_alignLeft="@+id/textView1"><requestFocus></requestFocus></EditText>
    <TextView android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_below="@+id/register_phase1_password" android:layout_alignLeft="@+id/textView3" android:text="@string/email_label" android:layout_marginTop="30dp"></TextView>
